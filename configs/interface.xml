<?xml version="1.0" encoding="UTF-8"?>
<interface>
<object class="GtkWindow" id="main_window">
    <property name="title">PowerMenu</property>
    <style>
        <class name="main-window"/>
    </style>

    <child>
        <object class="GtkBox" id="main_box">
            <property name="orientation">horizontal</property>
            <property name="halign">center</property>
            <property name="valign">center</property>
            <property name="spacing">20</property>
            <style>
                <class name="box-bg"/>
            </style>

            <!-- Buttons -->
            <child>
                <object class="GtkButton" id="poweroff_button">
                    <style><class name="pm-btn"/></style>
                    <child>
                        <object class="GtkImage">
                            <property name="icon-name">system-shutdown-symbolic</property>
                        </object>
                    </child>
                </object>
            </child>

			            <child>
                <object class="GtkButton" id="reboot_button">
                    <style><class name="pm-btn"/></style>
                    <child>
                        <object class="GtkImage">
                            <property name="icon-name">system-reboot-symbolic</property>
                        </object>
                    </child>
                </object>
            </child>

			<child>
                <object class="GtkButton" id="suspend_button">
                    <style><class name="pm-btn"/></style>
                    <child>
                        <object class="GtkImage">
                            <property name="icon-name">weather-clear-night-symbolic</property>
                        </object>
                    </child>
                </object>
            </child>

			<child>
                <object class="GtkButton" id="hibernate_button">
                    <style><class name="pm-btn"/></style>
                    <child>
                        <object class="GtkImage">
                            <property name="icon-name">system-shutdown-symbolic</property>
                        </object>
                    </child>
                </object>
            </child>

			<child>
				<object class="GtkButton" id="logout_button">
					<style><class name="pm-btn"/></style>
					<child>
						<object class="GtkImage">
							<property name="icon-name">system-log-out-symbolic</property>
						</object>
					</child>
				</object>
			</child>

			<child>
				<object class="GtkButton" id="cancel_button">
					<style><class name="pm-btn"/></style>
					<child>
						<object class="GtkImage">
							<property name="icon-name">window-close-symbolic</property>
						</object>
					</child>
				</object>
			</child>

            <!-- Repeat for reboot/suspend/hibernate/logout/cancel -->
        </object>
    </child>
</object>
</interface>